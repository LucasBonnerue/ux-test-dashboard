{
  "name": "evolution-dashboard",
  "version": "1.0.0",
  "description": "UX-Test-Dashboard f√ºr Evolution Hub",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --exec ts-node server.ts",
    "build": "tsc && npx ts-node esbuild.config.ts",
    "build:watch": "tsc --watch",
    "build:frontend": "ts-node esbuild.config.ts",
    "build:frontend:watch": "ts-node esbuild.config.ts --watch",
    "build:all": "npm run build && npm run build:frontend",
    "test": "node ./test/run-tests.js",
    "test:unit": "mocha -r ts-node/register 'test/unit/**/*.test.ts'",
    "test:events": "mocha -r ts-node/register 'test/unit/*-events.test.ts'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext .ts,.js .",
    "lint:fix": "eslint --ext .ts,.js . --fix",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "clean:frontend": "rimraf public/js/dist",
    "prebuild": "npm run clean",
    "prebuild:frontend": "npm run clean:frontend",
    "js-to-ts": "node scripts/js-to-js-rename.js"
  },
  "dependencies": {
    "bootstrap": "^5.3.7",
    "chart.js": "^4.3.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "glob": "^10.3.3",
    "node-fetch": "^3.3.2",
    "playwright": "^1.53.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.4.5",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "chai": "^5.2.1",
    "esbuild": "^0.25.6",
    "esbuild-plugin-typescript": "^2.0.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.6.2",
    "jsdom": "^26.1.0",
    "mocha": "^11.7.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "sinon": "^21.0.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
